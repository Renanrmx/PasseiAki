{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "2.3.1",
  "default_locale": "en",

  "action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "panel/index.html",
    "default_icon": {
      "16": "icons/check-mark-16.png",
      "24": "icons/check-mark-24.png",
      "32": "icons/check-mark-32.png",
      "48": "icons/check-mark-48.png"
    }
  },

  "icons": {
    "48": "icons/check-mark-48.png",
    "96": "icons/check-mark-96.png",
    "128": "icons/check-mark-128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "background": {
    "service_worker": "worker/background.js"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "downloads"    
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content/highlighter.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "passei-aki@renanrmx.github.io",
      "strict_min_version": "109.0"
    }
  }
}
